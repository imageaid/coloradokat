<%# locals: (adopter:)  %>

<%= form_with(model: adopter, class: "contents") do |form| %>
  <% if adopter.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(adopter.errors.count, "error") %> prohibited this adopter from being saved:</h2>

      <ul>
        <% adopter.errors.each do |error| %>

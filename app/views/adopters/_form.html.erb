  </div>

  <div class="my-5">
    <%= form.label :email %>
    <%= form.text_field :email, class: "tw-input" %>
  </div>

  <div class="my-5">
    <%= form.label :address_1 %>
    <%= form.text_field :address_1, class: "tw-input" %>
  </div>

  <div class="my-5">
    <%= form.label :address_2 %>
    <%= form.text_field :address_2, class: "tw-input" %>
  </div>

  <div class="my-5">
    <%= form.label :city %>
    <%= form.text_field :city, class: "tw-input" %>
  </div>

  <div class="my-5">
    <%= form.label :state %>
    <%= form.text_field :state, class: "tw-input" %>
  </div>

  <div class="my-5">
    <%= form.label :postal %>
    <%= form.text_field :postal, class: "tw-input" %>
  </div>

  <div class="inline">
    <%= form.submit class: "btn-primary" %>
  </div>
